# Environment Variables
DATABASE_URL="postgresql://user:password@localhost:5432/habitsmind_ai"
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRATION="7d"
NODE_ENV="development"
PORT=3000

# AI Service
OPENAI_API_KEY="your-openai-api-key"

# Rate Limiting by Plan (Créditos)
# Plano Free: 20 créditos por dia
# - POST /ai/analyze = 3 créditos (análise profunda)
# - GET /ai/insights = 1 crédito (insight rápido)
# Permite: 6 análises + 2 insights OU 20 insights
RATE_LIMIT_FREE_CREDITS_DAY=20

# Plano Premium: 300 créditos por hora (janela móvel)
# - POST /ai/analyze = 3 créditos (análise profunda)
# - GET /ai/insights = 1 crédito (insight rápido)
# Praticamente ilimitado para usuários humanos
RATE_LIMIT_PREMIUM_CREDITS_HOUR=300
